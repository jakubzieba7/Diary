<Window x:Class="Diary.Views.SplashScreenMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diary.Views"
        mc:Ignorable="d"
        Title="SplashScreenMain" Height="200" Width="300"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="200">
            <TextBlock FontSize="17" HorizontalAlignment="Center" FontWeight="SemiBold" Text="Ładowanie aplikacji..." Width="160"/>
            <ProgressBar x:Name="progressBar" IsIndeterminate="True" Height="5" Width="280"/>
        </StackPanel>

    </Grid>
</Window>
